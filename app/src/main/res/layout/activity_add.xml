<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.owlab.callblocker.AddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:useDefaultMargins="false"
            android:orientation="horizontal"
            android:columnCount="2"
            android:rowCount="3"
            android:background="@android:color/transparent"
            >

            <TextView
                android:id="@+id/label_add_by_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_tip_button"
                android:elevation="3dp"
                android:text="Add by manual"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textAllCaps="false"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_by_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_write_48"
                app:backgroundTint="@android:color/darker_gray"
                app:fabSize="mini"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/label_add_from_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_tip_button"
                android:elevation="3dp"
                android:text="Add from contacts"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textAllCaps="false"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_from_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="15dp"
                android:src="@drawable/ic_contacts_48"
                app:backgroundTint="@android:color/darker_gray"
                app:fabSize="mini"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/label_add_from_call_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:padding="3dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_tip_button"
                android:elevation="3dp"
                android:gravity="left"
                android:text="@string/add_from_call_history"
                android:textColor="#000000"
                android:textSize="11dp"
                android:textAllCaps="false"
                />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_add_from_call_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:src="@drawable/ic_history_48"
                app:backgroundTint="@android:color/holo_purple"
                android:elevation="3dp"
                app:pressedTranslationZ="12dp"
                app:fabSize="normal" />
        </GridLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout><!--
    android:background="#29000000"
    -->
