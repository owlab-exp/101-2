<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddSourceSelectionActivity">

    <com.owlab.callblocker.util.SnackbarCompatLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="3"
                android:useDefaultMargins="false">

                <TextView
                    android:id="@+id/label_add_by_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_tip_button"
                    android:elevation="3dp"
                    android:padding="3dp"
                    android:text="Add by manual"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add_by_manual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/fab_add_by_manual_48"
                    android:visibility="invisible"
                    app:backgroundTint="@android:color/darker_gray"
                    app:fabSize="mini" />

                <TextView
                    android:id="@+id/label_add_from_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_tip_button"
                    android:elevation="3dp"
                    android:padding="3dp"
                    android:text="Add from contacts"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add_from_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/fab_add_from_contacts_48"
                    android:visibility="invisible"
                    app:backgroundTint="@android:color/darker_gray"
                    app:fabSize="mini" />

                <TextView
                    android:id="@+id/label_add_from_call_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_tip_button"
                    android:elevation="3dp"
                    android:gravity="left"
                    android:padding="3dp"
                    android:text="@string/add_from_call_log"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <com.owlab.callblocker.util.SnackbarCompatLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_add_from_call_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:elevation="3dp"
                    android:src="@drawable/fab_add_from_call_log_48"
                    app:backgroundTint="@android:color/holo_purple"
                    app:fabSize="normal"
                    app:pressedTranslationZ="12dp" />
                </com.owlab.callblocker.util.SnackbarCompatLinearLayout>
            </GridLayout>
        </RelativeLayout>
    </com.owlab.callblocker.util.SnackbarCompatLinearLayout>
</android.support.design.widget.CoordinatorLayout><!--
    android:background="#29000000"
        android:layout_gravity="center_vertical|center"
    -->
